<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_finances/models/rules">
    <fieldset name="general">
        <field
                name="dat"
                type="calendar"
                label="COM_FINANCES_FORM_DATE"
                description="COM_FINANCES_FORM_SCORE_DATE_DESC"
                filter="none"
                class="span12"
                format="%d.%m.%Y"
                required="true"
        />
        <field
                name="number"
                type="text"
                label="COM_FINANCES_FORM_SCORE_NUMBER_LABEL"
                description="COM_FINANCES_FORM_SCORE_NUMBER_DESC"
                hint="COM_FINANCES_FORM_SCORE_NUMBER_HINT"
                message="COM_FINANCES_FORM_SCORE_NUMBER_MESSAGE"
                required="true"
                autocomplete="off"
                validate="Score"
                maxlength="20"
                class="span12"
        />
        <field
                name="amount"
                type="text"
                label="COM_FINANCES_FORM_SCORE_AMOUNT_LABEL"
                description="COM_FINANCES_FORM_SCORE_AMOUNT_DESC"
                hint="100.00"
                message="COM_FINANCES_FORM_SCORE_AMOUNT_MESSAGE"
                required="true"
                autocomplete="off"
                validate="Amount"
                maxlength="13"
                class="span12"
        />
        <field
                name="id"
                type="hidden"
        />
        <field
                name="contractID"
                type="hidden"
        />
    </fieldset>
</form>